<?xml version="1.0" encoding="UTF-8"?>
<sequence name="ServiceNowAuth" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property name="authorization-header"
              expression="fn:concat('XJWTAssertion ', get-property('transport', 'X-JWT-Assertion'))"/>
    <header name="Authorization" expression="get-property('authorization-header')" scope="transport"/>
    <header name="X-JWT-Assertion" action="remove" description="Delete X-JWT-Assertion Header" scope="transport"/>
</sequence>